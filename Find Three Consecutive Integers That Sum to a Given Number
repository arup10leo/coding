class Solution {
public:
    vector<long long> sumOfThree(long long nums) {
        vector<long long>v;
        if(nums%3==0) {
            long long k = nums/3;
            v.push_back(k-1);
            v.push_back(k);
            v.push_back(k+1);
        }
        else{
            return v;
        }
        return v;
    }
};
